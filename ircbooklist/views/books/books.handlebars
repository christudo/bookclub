<h1>Books</h1>

<div class="row">
  <div class="col-lg-4 col-md-12 mb-4 mb-lg-0"></div>
    {{#each books}}
      <div class="book">
        <img
        src="/images/{{image}}"
        class="w-100 shadow-1-strong rounded mb-4"
        alt=""
        />
        <h2>{{title}}</h2>
        <p>{{description}}</p> <!-- Display book description -->
        <p>Author: {{author}}</p>
      </div>
    {{/each}}
  </div>
</div>